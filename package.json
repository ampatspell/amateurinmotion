{
  "name": "amateurinmotion",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "flc": "npm run check && npm run format && npm run lint",
    "tools": "tsx ./src/lib/directus/tools.ts",
    "generate": "npm run tools -- generate"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.43.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@types/node": "^24",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "sass-embedded": "^1.93.2",
    "svelte": "^5.39.5",
    "svelte-check": "^4.3.2",
    "swiper": "^12.0.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-plugin-devtools-json": "^1.0.0"
  },
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "@directus/sdk": "^20.1.0",
    "@directus/visual-editing": "^1.1.0",
    "directus-sdk-typegen": "^0.2.1",
    "dotenv": "^17.2.3",
    "p-queue": "^9.0.0",
    "tsx": "^4.20.6",
    "valibot": "^1.1.0",
    "@ampatspell/directus-common": "^0.0.3"
  }
}
